{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    // path alias to enable absolute imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
